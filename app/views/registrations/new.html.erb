<h1> Registration </h1>
<%= form_with model: @user, url: signup_path, local: true do |f| %>
  <div>
    <%= f.label :name, "Enter your nickname"%><br>
    <%= f.text_field :name, required: true, autofocus: true %>
  </div>
  <div>
    <%= f.label :email, "Enter your Email" %><br>
    <%= f.email_field :email, required: true %>
  </div>
  <div>
    <%= f.label :password, "Enter your password" %><br>
    <%= f.password_field :password, required: true %>
  </div>
  <div>
    <%= f.label :password_confirmation, "Repeat your password" %><br>
    <%= f.password_field :password_confirmation, required: true %>
  </div><br>
  <div>
    <%= f.submit "Registrate"%><br>
  </div>
<%end%>